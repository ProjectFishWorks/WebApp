                                <MudItem xs="6">
                                    <MudNumericField @bind-Value="lightingControlDevice.DawnTimeHours" Label="Dawn" Min="0" Max="24" />
                                </MudItem>
                                <MudItem xs="6">
                                    <MudNumericField @bind-Value="lightingControlDevice.DawnTimeMins" Label=" " Min="0" Max="59" />
